<%- include('../include/header.ejs') %>

    
<div class="container" style="margin-top: 40px;">
    <h2><a href="/home/home"><img style="width: 35px;" src="https://cdn-icons-png.flaticon.com/512/25/25694.png"></a> Danh sách tài khoản</h2>

    <div class="col-12 col-sm-4 col-md-4" style="margin-left: 785px;"> 
        <form class="search d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Tìm kiếm user" aria-label="Search">
            <button class="btn btn-light" type="submit">Search</button>                
        </form>
    </div> 
    <div class="col-1 col-sm-4 col-md-12">

        <table class="table table-bordered table-striped" style="text-align: center;">
            <tr>
                <th>ID</th>
                <th>Tên khách hàng</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th></th>
            </tr>
        
            <% listUser.forEach( ( row )=>{  %>
                
            <tr>
                <td> <%= row._id %></td>                
                <td> <%= row.ten %> </td>
                <td> <%= row.email %> </td>
                <td> <%= row.sdt %> </td>

                <td> <a href="accounts/edit/<%= row._id%>">
                        <button type="button" class="btn btn-light">Sửa</button> 
                     </a>
                        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            xóa
                        </button>
                           
                        <div class="modal fade" id="staticBackdrop" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" >
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Chắc chắn muốn xóa ?</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                                            <a href="accounts/deleteUser/<%= row._id%>"><button type="button" class="btn btn-primary" data-bs-dismiss="modal">Có</button></a>
                                        </div>
                                    </div>
                                </div>
                        </div> 
                </td>

            </tr>
            <% } ) %>
        
            </table>
       
    </div>
</div>


<%- include('../include/footer.ejs') %>